<?xml version="1.0" encoding="utf-8"?>
<!-- styles.xml -->
<resources>

    <!-- Base Calculator Button Style -->
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Number Button Style -->
    <style name="CalculatorButton.Number">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_number_background</item>
    </style>

    <!-- Operator Button Style -->
    <style name="CalculatorButton.Operator">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_operator_background</item>
    </style>

    <!-- Function Button Style -->
    <style name="CalculatorButton.Function">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/btn_function_background</item>
    </style>

</resources>